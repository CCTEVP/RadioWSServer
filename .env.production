# ============================================================================
# RadioWSServer Production Environment Configuration
# ============================================================================
# Copy this to .env.production and customize for production deployment

# ----------------------------------------------------------------------------
# ENVIRONMENT
# ----------------------------------------------------------------------------
NODE_ENV=production

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------
PORT=8080

# REQUIRED: Set this to your actual production URL
PUBLIC_BASE_URL=https://radiowsserver-763503917257.europe-west1.run.app

# ----------------------------------------------------------------------------
# AUTHENTICATION
# ----------------------------------------------------------------------------
# CRITICAL: Use a different AUTH_SECRET for production!
# Generate a new one with: setup-auth-secret.ps1
AUTH_SECRET=REPLACE_WITH_PRODUCTION_SECRET

# ----------------------------------------------------------------------------
# PRODUCTION TOKENS
# ----------------------------------------------------------------------------
# Generate production-specific tokens after setting AUTH_SECRET
# DO NOT reuse development tokens in production!

# Production admin token
ADMIN_TOKEN_RADIO=

# Production automation token
AUTOMATION_TOKEN=

# ----------------------------------------------------------------------------
# WEBSOCKET CONFIGURATION
# ----------------------------------------------------------------------------
HEARTBEAT_INTERVAL_MS=30000
IDLE_TIMEOUT_MS=300000
MAX_CONN_AGE_MS=3600000

# ----------------------------------------------------------------------------
# HTTP POST CONFIGURATION
# ----------------------------------------------------------------------------
POST_CONTENT_MAX_BYTES=262144

# ----------------------------------------------------------------------------
# LOGGING & DEBUGGING
# ----------------------------------------------------------------------------
LOG_LEVEL=warn
DEBUG=false
