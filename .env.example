# ============================================================================
# RadioWSServer Environment Configuration Example
# ============================================================================
# Copy this file to .env and customize with your values
# DO NOT commit .env to version control!

# ----------------------------------------------------------------------------
# ENVIRONMENT
# ----------------------------------------------------------------------------
NODE_ENV=development

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------
PORT=8080
PUBLIC_BASE_URL=http://localhost:8080

# ----------------------------------------------------------------------------
# AUTHENTICATION
# ----------------------------------------------------------------------------
# CRITICAL: Generate a secure random value!
# Run: .\setup-auth-secret.ps1
AUTH_SECRET=REPLACE_WITH_YOUR_SECRET

# ----------------------------------------------------------------------------
# DEVELOPMENT TOKENS (Optional)
# ----------------------------------------------------------------------------
# Generate with: .\generate-universal-tokens.ps1 or node generate-test-token.js
TEST_TOKEN=
ADMIN_TOKEN_RADIO=
ADMIN_TOKEN_CHAT=
AUTOMATION_TOKEN=

# ----------------------------------------------------------------------------
# WEBSOCKET CONFIGURATION
# ----------------------------------------------------------------------------
HEARTBEAT_INTERVAL_MS=30000
IDLE_TIMEOUT_MS=0
MAX_CONN_AGE_MS=0

# ----------------------------------------------------------------------------
# HTTP POST CONFIGURATION
# ----------------------------------------------------------------------------
POST_CONTENT_MAX_BYTES=262144

# ----------------------------------------------------------------------------
# LOGGING & DEBUGGING
# ----------------------------------------------------------------------------
LOG_LEVEL=info
DEBUG=false
